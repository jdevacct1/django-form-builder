# Django Environment Configuration
# Copy this file to .env and fill in your actual values

# Environment (development, staging, production)
DJANGO_ENV=development

# Django Secret Key (REQUIRED for staging and production)
SECRET_KEY=your-secret-key-here

# Database Configuration (REQUIRED for staging and production)
DB_NAME=your_database_name
DB_USER=your_database_user
DB_PASSWORD=your_database_password
DB_HOST=localhost
DB_PORT=5432

# Allowed Hosts (comma-separated for staging and production)
ALLOWED_HOSTS=localhost,127.0.0.1

# CORS Allowed Origins (comma-separated)
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://localhost:5173

# Email Configuration (for staging and production)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_HOST_USER=your-email@gmail.com
EMAIL_HOST_PASSWORD=your-app-password
DEFAULT_FROM_EMAIL=noreply@yourdomain.com

# Admin Email (for production error notifications)
ADMIN_EMAIL=admin@yourdomain.com

# Redis URL (for staging and production caching)
REDIS_URL=redis://127.0.0.1:6379/0

# Optional: Debug Toolbar (development only)
# DEBUG_TOOLBAR=True
